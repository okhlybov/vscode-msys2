{
  "name": "msys2",
  "displayName": "msys2",
  "description": "MSYS2 cupport for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:msys2.root",
    "onCommand:msys2.helloWorld"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "msys2.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "MSYS2",
      "properties": {
        "msys2.root": {
          "type": "string",
          "default": "c:\\msys64",
          "description": "Path to MSYS2 root directory"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  }
}
